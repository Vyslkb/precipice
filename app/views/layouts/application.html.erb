<!DOCTYPE html>
<html>
  	<head>
	    
	    
	    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0">
	    <title><%= content_for?(:title) ? yield(:title) : "Beyond The Precipice" %></title>
	    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Beyond The Precipice" %>">
	    
	    
	    	<script type="text/javascript" src="https://js.stripe.com/v2/"></script> 
	    
	    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
	    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	    <%= csrf_meta_tags %>
	    <%= favicon_link_tag 'favicon.ico' %>
	    <%= tag :meta, :name => "stripe-key", :content => Rails.configuration.stripe[:publishable_key] %>
	    
	    <meta property="og:image" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path('fb_share_logo.png')}" %>" /> 
	    <meta property="og:title" content="Beyond The Precipice"/>
	    <meta property="og:url" content="http://www.beyondtheprecipice.com"/>
	    <meta property="og:site_name" content="Beyond The Precipice"/>
	    <meta property="og:description" content="Fine Art Photography"/>
	    <meta property="og:type" content="website"/>
	    
	    <meta property="og:image:type" content="image/png"/>
		<meta property="og:image:width" content="1388"/>
		<meta property="og:image:height" content="729"/>
        <script>
		  
		  facebook_init();
		  
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
		
		  ga('create', 'UA-48350686-1', 'beyondtheprecipice.com');
		  ga('send', 'pageview');
		
		</script>
	
  	</head>
	<body data-controller="<%= controller_name %>" data-action="<%= action_name %>" data-static-page="<%= static_page_name %>">	
   		<div id="fb-root"></div>
   		
   		<div class="container">
   			<div class="row">
   				<!-- Sidebar -->
   				<div id="sidebar"  class="col-xs-2 fixed">
   					<%= render 'layouts/sidebar_lg'%>
   					<% render 'layouts/sidebar_xs'%>
   				</div>
   				<!-- End Sidebar -->
   				
   				<div id="bg-container" class="col-xs-10 col-xs-offset-2">
   					<%= set_background_image %>  	
   				</div>
   				
   				<!-- main -->
   				<div id="main" class="col-xs-10 col-xs-offset-2  ">	
   					<div class="row">
   						<div class="col-xs-11">
   							
   							
   							<%= render 'layouts/admin_nav_bar' if admin_signed_in?%>
   							
   							
   							<%= render 'layouts/top_links'%>
   							<%= yield %>
						</div>
   					</div>
   				</div>
   				<!-- End Main -->
   			</div>
   		</div>
  	</body>
</html>
