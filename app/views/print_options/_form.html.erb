
<div class="col-md-4">
	<div class="row">
		
		<%= form_for(@print_option) do |f| %>
		  <% if @print_option.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@print_option.errors.count, "error") %> prohibited this print_option from being saved:</h2>
		
		      <ul>
		      <% @print_option.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		
		  <div class="form-group">
		    <%= f.label :name %>
		    <%= f.text_field :name, :class => 'form-control' %>
		  </div>
		  <div class="form-group">
		    <%= f.label :price %> (enter integer)
		    <%= f.number_field :price, :class => 'form-control' %>
		  </div>
		  
		   <div class="form-group">
		   	<%= f.label :print_type_id, "Print Type" %>
			<%= f.collection_select :print_type_id, PrintType.all, :id, :name,{},:class => 'form-control' %>
		  </div>
		  
		  <div class="form-group">
		    <%= f.check_box :add_to_photos %> 
		    <%= label_tag 'add_to_photos', 'Add this print option to all photos. ' %>
		    <p>
		    	Leave this unchecked to manually add this option to specific photos.
		    </p>
		  </div>
		  <div class="form-group">
		   <button type="submit" class="btn btn-default">Submit</button>
		  </div>
		<% end %>
		
	</div>
</div>
