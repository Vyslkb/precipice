<div class="row">
	<div class="column col-md-10">
		<h3><%= @collection.name%> Galleries</h3>
	</div>
</div>

<% @collection.galleries.each do |gallery| %>
	<div class="row">
		<div class="column col-md-10">
			<h4>
				<%= gallery.name%>
				<% if gallery.photos.count > 6 %>
					<small> - see all <%= gallery.photos.count %> photos in gallery</small>
				<%end%>
			</h4>
		</div>
	</div>
	<div class="row">
		<% gallery.photos.limit(6).each do |photo|%>
			<div class="col-md-4 top-buffer">
				<%= link_to photo,{title: photo.name} do %>
					<%= image_tag photo.photo_file.url(:medium), class: "thumbnail"%> 
				<%end%>
			</div>		
		<%end%>
	</div>
<%end%>
