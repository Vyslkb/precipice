<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
	<li>
		<%= link_to "Home", root_url %>
	</li>
  <li>
  	<%= link_to @gallery.collection.name, @gallery.collection %>
  </li>
  <li class="active"><%= @gallery.name %></li>
</ol>

<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to 'Edit Gallery Settings', edit_gallery_path(@gallery) %> |
	<%= link_to 'Upload New Photo', new_photo_path %> 
  </div>
</div>

<div class="container">
	<div class="row">
		<div class="panel panel-default col-md-4">
			<div class="panel-body">
		  		<%= form_for(@gallery) do |f| %>
					<% if @gallery.errors.any? %>
					    <div id="error_explanation">
					      <h2><%= pluralize(@gallery.errors.count, "error") %> prohibited this gallery from being saved:</h2>
					
					      <ul>
					      <% @gallery.errors.full_messages.each do |msg| %>
					        <li><%= msg %></li>
					      <% end %>
					      </ul>
					    </div>
					<% end %>
					
					<div class="form-group">
					   	<%= f.fields_for :photos,@new_photo do |photo_form|%>
					   		<div class="form-group">
								 Upload New Photo to Gallery:
								 <%= photo_form.file_field :photo_file %>
							</div>
					   		
					   		<div class="form-group">
								<%= photo_form.label :name %>
								<%= photo_form.text_field :name, :class => 'form-control' %>		 
							</div>
							<div class="form-group">
								<%= photo_form.label :description %>
			    				<%= photo_form.text_area :description, :class => 'form-control' %>
							</div>
								
							<div class="form-group">
							    <%= photo_form.label :paypal_identifier %>
							    <%= photo_form.text_field :paypal_identifier, :class => 'form-control' %>
							</div>
							
							<button type="submit" class="btn btn-default">Upload Photo</button>
					   	<%end%>
					</div>
					
				<% end %>
			
		  </div>
		</div>
	</div>

	<div class="row">
		<% @gallery.photos.each do |photo|%>
			<% unless photo == @new_photo %>
				<div class="col-md-2">
					<div class="thumbnail">
				    	<%= image_tag photo.photo_file.url(:medium), :class => "img-thumbnail" %>
				      	<div class="caption">
				        	<span><%= photo.name %></span>
				        	<p>
				        		<%= link_to "edit", edit_photo_path(photo)%>
				        	</p>
				      	</div>
				    </div>
			 	</div>
			<%end%>
		<%end%>
	</div>
</div>
