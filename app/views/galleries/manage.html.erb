<p id="notice"><%= notice %></p>

<ol class="breadcrumb">
	<li>
		<%= link_to "Home", root_url %>
	</li>
  <li>
  	<%= link_to "Collections", collections_path %>
  </li>
  <li class="active"><%= @gallery.name_with_collection %></li>
</ol>

<div class="panel panel-default">
  <div class="panel-body">
  	<%= link_to 'Public View', @gallery %> |
    <%= link_to 'Edit Gallery Settings', edit_gallery_path(@gallery) %> |
	<%= link_to 'Delete this gallery', @gallery, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>

<div class="container">
	<%= render "galleries/manage/file_upload"%>
	<div class="row top-buffer" id="thumbnail_grid">
		<%= render "galleries/manage/thumbnails"%>
	</div>
</div>

<%= render 'shared/blueimp_gallery_container'%>
