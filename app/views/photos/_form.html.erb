<div class="container">
	<div class="row clearfix">
		<div class="col-md-5 col-md-offset-1 column">
			<%= form_for(@photo, :role => "form") do |f| %>
			  <% if @photo.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
			
			      <ul>
			      <% @photo.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
				<div class="form-group">
					<%= f.label :name %>
    				<%= f.text_field :name, :class => 'form-control' %>		 
				</div>
				<div class="form-group">
					<%= f.label :description %>
    				<%= f.text_area :description, :class => 'form-control' %>
				</div>
				<div class="checkbox">
					<%= f.label :active %>
    				<%= f.check_box :active %>
				</div>	
				<div class="form-group">
				    <%= f.label :paypal_identifier %>
				    <%= f.text_field :paypal_identifier, :class => 'form-control' %>
				</div>
				
				<div class="form-group">
				    <%= f.label :gallery_id %>
				    <%= f.collection_select :gallery_id, Gallery.all, :id,:name_with_collection, {}, :class => 'form-control' %>
				</div>		
				
				<% if @photo.photo_file.blank? %>
					<div class="form-group">
						 Upload Photo:
						 <%= f.file_field :photo_file %>
					</div>
				<%else%>
					<div class="form-group"><%= image_tag @photo.photo_file.url(:thumb), :class => "img-thumbnail" %></div>
					
				<%end%>
				
				<button type="submit" class="btn btn-default">Submit</button>
			<% end %>
		</div>
	</div>
</div>