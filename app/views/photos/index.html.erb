<h1>Listing photos</h1>

<table class="table">
  <thead>
    <tr>
    	
      <th>Name</th>
      <th>Gallery</th>
      <th>Description</th>
      <th>Active</th>
      <th>Paypal identifier</th>
      <th>Gallery</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.name %></td>
        <td><%= photo.try(:gallery).try(:name)%></td>
        <td><%= photo.description %></td>
        <td><%= photo.active %></td>
        <td><%= photo.paypal_identifier %></td>
        <td><%= image_tag photo.photo_file.url(:thumb)%></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

